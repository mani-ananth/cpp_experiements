{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "process",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g", "${file}",
				"-std=c++11", "-isystem", "benchmark/include",
				"-Lbenchmark/build/src", "-lbenchmark", "-lpthread",
				"-o", "${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		}
	]
}